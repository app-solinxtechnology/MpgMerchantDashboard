{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
       "$Wave":["src/components/wave/index"],
       "$Icons/*":["src/icons/*"],
       "$components/*":["src/components/*"],
       "$myhooks":["src/hooks/index"],
       "$List/*":["src/list/*"],
       "$machine/*":["src/machine/*"],
       "$Nat":["src/routing/AdminRouting/index"],
       "$Alerting":["src/components/alert/index"],
       "#Services":["src/services/api"],
       "#Usage":["src/utils/index"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
